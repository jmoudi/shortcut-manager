{
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "*": [ "*" ],
      "@/*" : [ "./src/*"],
      "@Modules/*" : [ "../../Modules/*", ],
    },
    //"composite": true
  },

  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/__ignored__",
    "**/*.spec.ts"
  ]
}
